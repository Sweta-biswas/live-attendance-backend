                                "auth",
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Current User",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "{{token}}",
                                "description": "JWT Token"
                            }
                        ],
                        "url": {
                            "raw": "http://localhost:3000/auth/me",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "3000",
                            "path": [
                                "auth",
                                "me"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Class Management",
            "item": [
                {
                    "name": "Create Class",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "{{teacherToken}}",
                                "description": "Teacher JWT Token"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"className\": \"Mathematics 101\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:3000/class",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "3000",
                            "path": [
                                "class"
                            ]
                        }
                    }
                },
                {
                    "name": "Add Student to Class",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "{{teacherToken}}",
                                "description": "Teacher JWT Token"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"studentId\": \"{{studentId}}\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:3000/class/{{classId}}/add-student",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "3000",
                            "path": [
                                "class",
                                "{{classId}}",
                                "add-student"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Class Details",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "{{token}}",
                                "description": "JWT Token"
                            }
                        ],
                        "url": {
                            "raw": "http://localhost:3000/class/{{classId}}",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "3000",
                            "path": [
                                "class",
                                "{{classId}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Students",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "{{teacherToken}}",
                                "description": "Teacher JWT Token"
                            }
                        ],
                        "url": {
                            "raw": "http://localhost:3000/students",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "3000",
                            "path": [
                                "students"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Attendance",
            "item": [
                {
                    "name": "Start Attendance Session",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "{{teacherToken}}",
                                "description": "Teacher JWT Token"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"classId\": \"{{classId}}\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:3000/attendance/start",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "3000",
                            "path": [
                                "attendance",
                                "start"
                            ]
                        }
                    }
                },
                {
                    "name": "Get My Attendance (Student)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "{{studentToken}}",
                                "description": "Student JWT Token"
                            }
                        ],
                        "url": {
                            "raw": "http://localhost:3000/class/{{classId}}/my-attendance",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "3000",
                            "path": [
                                "class",
                                "{{classId}}",
                                "my-attendance"
                            ]
                        }
                    }
                }
            ]
        }
    ],
