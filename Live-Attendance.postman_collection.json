{
    "info": {
        "name": "Live Attendance Backend",
        "description": "Complete API collection for Live Attendance System",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Signup Teacher",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Teacher John\",\n  \"email\": \"teacher@test.com\",\n  \"password\": \"password123\",\n  \"role\": \"teacher\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:3000/auth/signup",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "3000",
                            "path": [
                                "auth",
                                "signup"
                            ]
                        }
                    }
                },
                {
                    "name": "Signup Student",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Alice Smith\",\n  \"email\": \"alice@test.com\",\n  \"password\": \"password123\",\n  \"role\": \"student\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:3000/auth/signup",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "3000",
                            "path": [
                                "auth",
                                "signup"
                            ]
                        }
                    }
                },
                {
                    "name": "Login Teacher",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"teacher@test.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:3000/auth/login",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "3000",
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Login Student",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"alice@test.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:3000/auth/login",
